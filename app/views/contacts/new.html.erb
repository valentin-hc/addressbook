<h2>Create a new contact</h2>
<%= form_for @contact do |f| %>
	<div>
		<%= f.label :name %>
		<%= f.text_field :name, placeholder: "name" %>
	</div>
	<div>
		<%= f.label :address %>
		<%= f.text_area :address %>
	</div>
	<div>
		<%= f.label :phone_number %>
		<%= f.text_field :phone_number %>
	</div>
	<div>
		<%= f.label :email %>
		<%= f.text_area :email %>
	</div>
	<div>
		<%= f.submit "Create new contact" %>
	</div>
<% end %>